	// Computes R2 = max(R0, R1)  (R0,R1,R2 refer to RAM[0],RAM[1],RAM[2])
	
0	   @R0
1	   D=M              // D = first number
2	   @R1
3	   D=D-M            // D = first number - second number
4	   @OUTPUT_FIRST
5	   D;JGT            // if D>0 (first is greater) goto output_first
6	   @R1
7	   D=M              // D = second number
8	   @OUTPUT_D
9	   0;JMP            // goto output_d
	(OUTPUT_FIRST)
10	   @R0             
11	   D=M              // D = first number
	(OUTPUT_D)
12	   @R2
13	   M=D              // M[2] = D (greatest number)
	(INFINITE_LOOP)
14	   @INFINITE_LOOP
15	   0;JMP            // infinite loop
