	// Draws a rectangle at the top-left corner of the screen.
	// The rectangle is 16 pixels wide and R0 pixels high.
	
0	   @0
1	   D=M
2	   @INFINITE_LOOP
3	   D;JLE 
4	   @counter
5	   M=D
6	   @SCREEN
7	   D=A
8	   @address
9	   M=D
	(LOOP)
10	   @address
11	   A=M
12	   M=-1
13	   @address
14	   D=M
15	   @32
16	   D=D+A
17	   @address
18	   M=D
19	   @counter
20	   MD=M-1
21	   @LOOP
22	   D;JGT
	(INFINITE_LOOP)
23	   @INFINITE_LOOP
24	   0;JMP
